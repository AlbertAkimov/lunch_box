<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lunchbox.activity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LunchBox"
        android:usesCleartextTraffic="true"
        android:name="com.lunchbox.App">

        <activity
            android:name="com.lunchbox.activity.ProductActivity"
            android:exported="true" />

        <activity
            android:name="com.lunchbox.activity.CategoryMenuActivity"
            android:exported="true" />

        <activity
            android:name="com.lunchbox.activity.CartActivity"
            android:exported="true" />

        <activity
            android:name="com.lunchbox.activity.AuthenticationActivity"
            android:exported="true" />
        <activity
            android:name="com.lunchbox.activity.DeliveryDateActivity"
            android:exported="true" />

        <activity
            android:name="com.lunchbox.activity.AccessRecoveryActivity"
            android:exported="true" />

        <activity
            android:name="com.lunchbox.activity.RecoveryPasswordActivity"
            android:exported="true" />


        <activity android:name="com.lunchbox.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>