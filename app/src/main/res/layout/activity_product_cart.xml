<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="100">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="60"
                android:layout_gravity="left"
                android:gravity="left"
                android:scaleType="fitXY"
                android:adjustViewBounds="false"
                android:id="@+id/image_shopping_cart">

        </ImageView>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:id="@+id/nameProduct_shopping_cart"
                    android:textStyle="bold"
                    android:gravity="left"

                    android:text="@string/productName_shopping_cart">

            </TextView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:id="@+id/price_shopping_cart"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:text="@string/price_shopping_cart">

            </TextView>

        </LinearLayout>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/increase"
                android:src="@mipmap/plus_icon"
                android:background="@android:color/transparent">

        </ImageButton>

        <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/number_shopping_cart"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/price_shopping_cart">

        </TextView>

        <ImageButton
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:id="@+id/decrease"
                android:src="@mipmap/minus_icon"
                android:background="@android:color/transparent">

        </ImageButton>

    </LinearLayout>

</LinearLayout>